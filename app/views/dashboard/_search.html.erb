<%= form_with url: root_url, method: :get, class: "row g-4 pb-4" do |f| %>
  <div class="row mb-3 justify-content-between w-90">
    <div class="col-auto" data-controller="select2">
      <%= f.label :project_id,  t("project.form.name"), class: "form-label" %>
      <%= f.select :project_id, list_project, {include_blank: true, selected: params[:project_id]}, {class: "form-select select2"} %>
    </div>
    <div class="col-auto">
      <%= f.label :group_id, t("project.form.group"), class: "form-label" %>
      <%= f.select :group_id, list_group, {include_blank: true, selected: params[:group_id]}, {class: "form-select"} %>
    </div>
    <div class="col-auto">
      <%= f.label :status, t("projects.search_form.status"), class: "form-label" %>
      <%= f.select :status, list_statuses, {include_blank: true, selected: params[:status]}, {class: "form-select"} %>
    </div>

    <div class="col-auto w-193px">
      <%= f.label :start_month_year, t(".start_month"), class: "form-label" %>
      <%= f.date_field :start_month_year, type: "month",
                       value: start_month_field_value(params[:start_month_year]), class: "form-control" %>
    </div>

    <div class="col-auto w-193px">
      <%= f.label :end_month_year, t(".end_month"), class: "form-label" %>
      <%= f.date_field :end_month_year, type: "month",
                       value: month_field_value(params[:end_month_year]), class: "form-control" %>
    </div>
  </div>

  <div class="row mb-3 justify-content-end w-90">
    <div class="col-auto w-125px">
      <label class="form-label invisible">invisible</label>
      <%= f.submit t("projects.search_form.search"), name: nil, class: "btn btn-primary form-control"%>
    </div>
    <div class="col-auto w-80px">
      <label class="form-label invisible">invisible</label>
      <%= link_to root_url, class: "btn btn-secondary form-control" do %>
        <i class="bi bi-arrow-counterclockwise"></i>
      <% end %>
    </div>
  </div>
<% end %>
