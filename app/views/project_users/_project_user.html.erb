<tr>
  <td><%= sequence_number project_user_counter, @pagy&.offset %></td>
  <td><%= project_user.user_name %></td>
  <td><%= project_user.project_role_name %></td>
  <td><%= project_user.user_git_account %></td>
  <td><%= format_date project_user.joined_at %></td>
  <td><%= format_date project_user.left_at %></td>
  <td class="text-center">
    <% if current_user.can_edit_delete_project? project_user.project %>
      <%= link_to edit_project_user_path(project_user), class: "edit btn btn-success btn-sm", title: "Edit", "data-toggle" => "tooltip", data: { turbo_frame: "modal" } do %>
        <i class="bi bi-pencil-square text-white"></i>
      <% end %>
      <%= link_to project_user_path(project_user), class: "delete btn btn-danger btn-sm", title: "Delete", "data-toggle" => "tooltip", data: { turbo_method: :delete, turbo_confirm: t("projects.you_sure?") }  do %>
        <i class="bi bi-trash text-white"></i>
      <% end %>
    <% end %>
  </td>
</tr>
