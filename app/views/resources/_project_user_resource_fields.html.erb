  </div>
  <div class="mb-3">
    <%= f.label :month, "name", class: "form-label" %>
    <%= f.text_field :month, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= f.label :year, "name", class: "form-label" %>
    <%= f.text_field :year, class: "form-control" %>
