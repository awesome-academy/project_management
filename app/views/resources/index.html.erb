<div class="row mb-3">
  <div class="col">
    <label class="form-label h6"><%= t(".select_date") %></label>
    <%= text_field_tag :search, nil, placeholder: "MM/DD/YYYY", class: "form-control" %>
  </div>
  <div class="col">
    <label class="form-label h6"><%= t(".search") %></label>
    <div class="input-group input-group-merge">
      <!-- Input -->
      <%= text_field_tag :search, nil, placeholder: t(".search"), class: "form-control bg-light-green border-light-green" %>

      <!-- Button -->
      <span class="input-group-text bg-light-green border-light-green p-0">
        <!-- Button -->
        <button class="btn btn-primary rounded-2 w-30px h-30px p-0 mx-1" type="button">
          <i class="bi bi-search"></i>
        </button>
      </span>
    </div>
  </div>
</div> <!-- / .row -->
<div class="row py-3">
  <div class="col">
    <!-- Card -->
    <div class="card border-0 flex-fill w-100">
      <div class="card-header border-0 card-header-space-between">
        <!-- Title -->
        <h2 class="card-header-title h4 text-uppercase"><%= t(".resources") %></h2>

        <!-- Dropdown -->
        <div class="dropdown ms-4">
          <a href="javascript: void(0);" class="dropdown-toggle no-arrow text-secondary" role="button"
            data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <i class="bi bi-three-dots-vertical"></i>
          </a>
          <div class="dropdown-menu">
            <a href="javascript: void(0);" class="dropdown-item">
              <%= t(".export_report")%>
            </a>
            <a href="javascript: void(0);" class="dropdown-item">
              <%= t(".share")%>
            </a>
          </div>
        </div>
      </div>

      <!-- Table -->
      <div class="table-responsive">
        <table class="table table-bordered align-middle table-edge table-hover table-nowrap mb-0">
          <thead class="thead-light">
            <tr>
              <th class="text-dark">
                <%= t(".order")%>
              </th>
              <th class="text-dark">
                <%= t(".project_name")%>
              </th>
              <th class="text-dark">
                <%= t(".man_month")%>
              </th>
              <th class="text-dark">
                <%= t(".detail")%>
              </th>
            </tr>
          </thead>

          <tbody class="list">
            <% @projects.each_with_index do |item, index| %>
              <tr>
                <td>
                  <%= item[:id] %>
                </td>
                <td>
                  <span class="fw-bold">
                    <%= item[:name] %>
                  </span>
                </td>
                <td>
                  <%= item.reports.sum(:effort_time)/100 %>
                </td>
                <td>
                  <%= link_to t(".detail") , resource_path(item[:id]) %>
                </td>
              </tr>
              <% end %>
          </tbody>
        </table>
      </div>
      <!-- / .table-responsive -->

      <div class="card-footer">
        <div class="d-flex justify-content-between align-items-center">
          <!-- Pagination -->
          <ul class="pagination list-pagination mb-0" style="display: flex">
            <li class="page-item active">
              <a class="page page-link" href="javascript: void(0);" data-i="1" data-page="8">1</a>
            </li>
            <li class="page-item">
              <a class="page page-link" href="javascript: void(0);" data-i="2" data-page="8">2</a>
            </li>
            <li class="page-item">
              <a class="page page-link" href="javascript: void(0);" data-i="3" data-page="8">3</a>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
