<% provide(:title, t(".title")) %>
<h1 class="fw-bold mb-0 text-center"><%= t ".title" %></h1>

<div class="container w-50 d-flex justify-content-center">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @user, url: password_reset_path(params[:id])) do |f| %>
      <%= render "shared/error_messages", object: f.object %>

      <%= hidden_field_tag :email, @user.email %>

      <!-- Password input -->
      <div class="form-outline mt-4 mb-4">
        <%= f.label :password, t(".password"), class: "form-label", for: "session_password" %>
        <%= f.password_field :password, class: "form-control" %>
      </div>

      <!-- Password comfirmation input -->
      <div class="form-outline mb-4">
        <%= f.label :password_confirmation, t(".confirmation"), class: "form-label", for: "session_password"  %>
        <%= f.password_field :password_confirmation, class: "form-control" %>
      </div>
      <%= f.submit t(".submit"), class: "btn btn-primary btn-block mb-4 w-100" %>
    <% end %>
  </div>
</div>
