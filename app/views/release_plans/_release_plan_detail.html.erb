<div class="container">
  <div class="card">
    <div class="card-body">
      <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12">
          <div class="table-responsive">
            <table class="table table-striped table-product">
              <tbody>
                <tr>
                  <td width="250" class="fw-bold"><%= t ".project_name" %></td>
                  <td><%= @release_plan.project_name %></td>
                </tr>
                <tr>
                  <td class="fw-bold"><%= t ".creator" %></td>
                  <td><%= @release_plan.creator_name %></td>
                </tr>
                <tr>
                  <td class="fw-bold"><%= t ".email" %></td>
                  <td><%= @release_plan.creator_email %></td>
                </tr>
                <tr>
                  <td class="fw-bold"><%= t ".date" %></td>
                  <td><%= format_date @release_plan.release_date %></td>
                </tr>
                <tr>
                  <td class="fw-bold"><%= t ".description" %></td>
                  <td><%= @release_plan.description %></td>
                </tr>
                <tr>
                  <td class="fw-bold"><%= t ".status" %></td>
                  <td><%= t "release_plans.is_released.#{@release_plan.is_released}" %></td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
