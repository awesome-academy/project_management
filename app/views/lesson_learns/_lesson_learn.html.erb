<tr class="table_row hide">
  <td><%= sequence_number lesson_learn_counter, @pagy&.offset %></td>
  <td><%= lesson_learn.lesson_learn_category_name %></td>
  <td>
    <div class="text-3-line-text-overflow"><%= lesson_learn.context_description %></div>
  </td>
  <td>
    <div class="text-3-line-text-overflow"><%= lesson_learn.learning_point %></div>
  </td>
  <td><%= lesson_learn.creator_name %></td>
  <td><%= lesson_learn.project_name %></td>
  <td><%= format_date lesson_learn.created_at %></td>
  <td class="text-center">
    <%= link_to "#", class: "btn btn-primary btn-sm" do %>
      <i class="bi-eye-fill"></i>
    <% end %>
    <% if current_user.can_edit_delete_lesson_learn? lesson_learn %>
      <%= link_to "", class: "btn btn-success btn-sm" do %>
        <i class="bi-pencil-square"></i>
      <% end %>
      <%= link_to "", data: { turbo_method: :delete, turbo_confirm: t("projects.you_sure?") }  do %>
        <button type="button" class="btn btn-danger btn-sm">
          <i class="bi-trash-fill text-light"></i>
        </button>
      <% end %>
    <% end %>
  </td>
</tr>
