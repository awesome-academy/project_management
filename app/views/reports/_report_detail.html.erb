<div class="container">
  <div class="card">
    <div class="card-body">
      <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12">
          <div class="table-responsive">
            <table class="table table-striped table-product">
              <tbody>
                <tr>
                  <td width="250"><%= t ".project_name" %></td>
                  <td><%= @report.project_name %></td>
                </tr>
                <tr>
                  <td><%= t ".creator" %></td>
                  <td><%= @report.user_name %></td>
                </tr>
                <tr>
                  <td><%= t ".email" %></td>
                  <td><%= @report.user_email %></td>
                </tr>
                <tr>
                  <td><%= t ".date" %></td>
                  <td><%= format_date @report.date %></td>
                </tr>
                <tr>
                  <td><%= t ".description" %></td>
                  <td><%= @report.description %></td>
                </tr>
                <tr>
                  <td><%= t ".issue" %></td>
                  <td><%= @report.issue %></td>
                </tr>
                <tr>
                  <td><%= t ".resource_description" %></td>
                  <td><%= @report.resource_description %></td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
