<%= form_with url: reports_path, method: :get, class: "row g-4 pb-4" do |f| %>
  <div class="col-auto">
    <%= f.label :start_date,  t(".start_date_report"), class: "form-label" %>
    <%= f.date_field :start_date, value: params[:start_date], class: "form-control" %>
  </div>
  <div class="col-auto">
    <%= f.label :end_date,  t(".end_date_report"), class: "form-label" %>
    <%= f.date_field :end_date, value: params[:end_date], class: "form-control" %>
  </div>
  <div class="col-auto">
    <%= f.label :name,  t(".name"), class: "form-label" %>
    <%= f.text_field :name, value: params[:name], class: "form-control" %>
  </div>
  <div class="col-auto">
    <%= f.label :status, t(".status"), class: "form-label" %>
    <%= f.select :status, list_statuses, {include_blank: true, selected: params[:status]}, class: "form-select" %>
  </div>
  <div class="col-auto">
    <label class="form-label invisible">invisible label</label>
    <%= f.submit t(".search"), name: nil, class: "btn btn-primary form-control" %>
  </div>
  <div class="col-auto">
    <label class="form-label invisible">invisible label</label>
    <%= link_to reports_path, class: "btn btn-secondary form-control" do %>
      <i class="bi bi-arrow-counterclockwise"></i>
    <% end %>
  </div>
  <div class="col-auto border-0 card-header-space-between d-flex align-items-end">
    <div class="dropdown ms-4">
      <a href="javascript: void(0);" class="dropdown-toggle no-arrow text-secondary" role="button"
         data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <h5><i class="bi bi-three-dots-vertical"></i></h5>
      </a>
      <div class="dropdown-menu">
        <%= link_to t(".export"), reports_path(format: :xlsx, name: params[:name], status: params[:status],
                                               start_date: params[:start_date], end_date: params[:end_date]), class: "dropdown-item" %>
      </div>
    </div>
  </div>
  <div class="col-auto ms-auto">
    <label class="form-label invisible">invisible label</label>
    <%= link_to t(".new_report"), new_report_path, class: "btn btn-primary form-control" %>
  </div>
<% end %>
