<tr>
  <td><%= sequence_number item_counter, @pagy&.offset  %></td>
  <td><%= item.name %></td>
  <td><%= item.calculate_project_man_per_month(params[:month_year]) %></td>

  <td class="text-center">
    <%= link_to project_feature_path(item, date: params[:month_year]), class: "btn btn-primary btn-sm" do %>
      <i class="bi-eye-fill"></i>
    <% end %>
  </td>
</tr>
