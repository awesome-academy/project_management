<div class="container">
  <div class="card">
    <div class="card-body">
      <div class="card-title row">
        <div class="col-sm-8"><h3><%= t "projects.show.Project_Health" %></h3></div>
        <div class="col-auto ms-auto">
          <% if @project.project_health_items.present? %>
            <%= link_to t(".update_health"), edit_health_path(@project), data: { turbo_frame: "project-health-body" }, class: "btn btn-success" %>
          <% else %>
            <%= link_to "+", new_health_path(project_id: @project.id), data: { turbo: false }, class: "btn btn-info text-white form-control br fw-bold fs-4" %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="table-responsive">
          <%= turbo_frame_tag "project-health-body" do %>
            <table class="table table-striped table-product">
              <tbody id="project-health-body">
              <% if @project.project_health_items.present? %>
                <%= render @project.project_health_items %>
              <% else %>
                <div class="text-center">
                  <h4><%= t ".not_have_health" %></h4>
                </div>
              <% end %>
              </tbody>
            </table>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
