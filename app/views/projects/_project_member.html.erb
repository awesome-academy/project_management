<div class="table-wrapper w-100">
  <div class="table-title">
    <div class="row">
      <div class="col-sm-8"><h2><%= t ".Project_Member" %></h2></div>
      <div class="col-auto ms-auto">
        <%= link_to "+", new_project_user_path, data: {turbo_frame: "modal"}, class: "btn btn-info text-white form-control br fw-bold fs-4" %>
      </div>
    </div>
  </div>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th width="5%"><%= t ".stt" %></th>
        <th><%= t ".Member_name" %></th>
        <th><%= t ".Role" %></th>
        <th><%= t ".Github_Account" %></th>
        <th><%= t ".joined_at" %></th>
        <th><%= t ".left_at" %></th>
        <th class="w-auto"><%= t ".action" %></th>
      </tr>
    </thead>
    <tbody id="project_members">
      <%= render @project_members %>
    </tbody>
  </table>
</div>
<div class="card-footer">
  <div class="d-flex justify-content-between align-items-center">
    <!-- Pagination -->
    <% if @pagy&.pages > 1 %>
      <%== pagy_info @pagy %>
      <%== pagy_bootstrap_nav @pagy %>
    <% end %>
  </div>
</div>
