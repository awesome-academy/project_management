<%= form_with url: projects_path, method: :get, class: "row g-4 pb-4" do |f| %>
  <div class="col-auto">
    <%= f.label :start_date,  t(".start_date"), class: "form-label" %>
    <%= f.date_field :start_date, value: params[:start_date], class: "form-control" %>
  </div>
  <div class="col-auto">
    <%= f.label :end_date,  t(".end_date"), class: "form-label" %>
    <%= f.date_field :end_date, value: params[:end_date], class: "form-control" %>
  </div>
  <div class="col-auto">
    <%= f.label :name,  t(".name"), class: "form-label" %>
    <%= f.text_field :name, value: params[:name], class: "form-control" %>
  </div>
  <div class="col-auto">
    <%= f.label :group_id, t(".group"), class: "form-label" %>
    <%= f.select :group_id, list_group, {include_blank: true, selected: params[:group_id]}, class: "form-select" %>
  </div>
  <div class="col-auto">
    <%= f.label :status, t(".status"), class: "form-label" %>
    <%= f.select :status, list_statuses, {include_blank: true, selected: params[:status]}, class: "form-select" %>
  </div>
  <div class="col-auto">
    <label class="form-label invisible">invisible label</label>
    <%= f.submit t(".search"), name: nil, class: "btn btn-primary form-control" %>
  </div>
  <div class="col-auto">
    <label class="form-label invisible">invisible label</label>
    <%= link_to projects_path, class: "btn btn-secondary form-control" do %>
      <i class="bi bi-arrow-counterclockwise"></i>
    <% end %>
  </div>

  <div class="col-auto ms-auto">
    <label class="form-label invisible">invisible label</label>
    <%= link_to t(".new_project"), new_project_path, class: "btn btn-primary form-control" %>
  </div>

  <div class="col-auto">
    <label class="form-label invisible">invisible label</label>
    <%= link_to t("projects.index.export"),
                projects_path(format: :xlsx,
                                start_date: params[:start_date],
                                end_date: params[:end_date],
                                name: params[:name],
                                group_id: params[:group_id],
                                status: params[:status]),
                class: "btn btn-secondary form-control" %>
  </div>
<% end %>
