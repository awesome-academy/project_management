<% provide :title, t(".value_resources_index") %>
<%= render "value_resources/search" %>
<div class="card-footer">
  <% if @pagy.pages > 1 %>
    <div class="d-flex justify-content-between align-items-center">
      <!-- Pagination -->
      <%== pagy_info @pagy %>
      <%== pagy_bootstrap_nav @pagy %>
    </div>
  <% end %>
</div>
<div style="overflow-x: scroll">
  <div class="card-header border-0 card-header-space-between">
    <h2 class="card-header-title h4 text-uppercase"></h2>
    <div class="dropdown ms-4">
      <a href="javascript: void(0);" class="dropdown-toggle no-arrow text-secondary" role="button"
         data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <i class="bi bi-three-dots-vertical"></i>
      </a>
      <div class="dropdown-menu">
        <%= link_to t(".export"), value_resources_path(format: :xlsx, name: params[:name], group_id: params[:group_id],
                                                       status: params[:status]), class: "p-2" %>
      </div>
    </div>
  </div>
  <table class="table table-striped table-hover table-bordered table-responsive">
    <thead>
      <tr>
        <th class="w-200px"></th>
        <% month_number_displayed(params[:year]).times do |i| %>
          <th colspan="3" class="w-400px"> <%= t "project_features.project_feature.month" %> <%= i + 1 %> </th>
        <% end %>
        <th colspan="3" class="w-600px"><%= t ".total_year" %></th>
      </tr>
      <tr>
        <th><%= t "projects.index.name" %></th>
        <% month_number_displayed(params[:year]).times do |i| %>
          <th><%= t ".value" %></th>
          <th><%= t ".resource" %></th>
          <th><%= t ".diff" %></th>
        <% end %>
        <th>
          <%= t ".total_value_year", month: month_number_displayed(params[:year]) %>
        </th>
        <th>
          <%= t ".total_resource_year", month: month_number_displayed(params[:year]) %>
        </th>
        <th>
          <%= t ".total_diff_year", month: month_number_displayed(params[:year]) %>
        </th>
      </tr>
    </thead>
    <tbody>
      <% @project_pagys.each do |project| %>
        <%= render partial: "value_resources/value_resource", locals: { project: project} %>
      <% end %>
      <tr>
        <td><%= t ".total" %></td>
        <%= value_resources_total_html @projects, year_field_value(params[:year]) %>
      </tr>
    </tbody>
  </table>

</div>
